<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>仗剑论坛</display-name>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.html</url-pattern>
      <el-ignored>true</el-ignored>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
    <!--去掉jsp指令jstl标签造成的空白行-->
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <trim-directive-whitespaces>true</trim-directive-whitespaces>
    </jsp-property-group>
  </jsp-config>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:config/spring-base.xml</param-value>
  </context-param>
  <!--定义应用程序名字webapprootkey键-->
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>sword.root</param-value>
  </context-param>

  <!--由Sprng载入的Log4j配置文件位置-->
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.properties</param-value>
  </context-param>

  <!--Spring默认刷新Log4j配置文件的间隔,单位为millisecond-->
  <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>60000</param-value>
  </context-param>

  <!-- Web 项目 Spring 加载 Log4j 的监听 -->
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <!--系统启动监听器-->
  <listener>
    <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.sword.listen.OnlineListener</listener-class>
  </listener>
  <!--过滤器-->
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>commonAuthority</filter-name>
    <filter-class>com.sword.filters.AuthorityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/addtopicclick</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/addtopic</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/addComment</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/showmyplace</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/unReadComment</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/toiconcern</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/toconcerni</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/deleteConcern</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/cancelConcern</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/intoalterinfo</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/intoalterpassword</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/alterpassword</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/mytopic</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>commonAuthority</filter-name>
    <url-pattern>/deleteMytopic</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <async-supported>true</async-supported>
   <init-param>
     <param-name>contextConfigLocation</param-name>
     <param-value>classpath:config/spring-servlet.xml</param-value>
   </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <!--Session时长-->
  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <!--错误页面-->
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <!--<error-page>-->
    <!--<error-code>500</error-code>-->
    <!--<location>/500.html</location>-->
  <!--</error-page>-->
</web-app>